{
  "manifest_version": 2,

  "name": "Sanskrit Dictionary",
  "description": "English translation in PopUp on Sanskrit text selection.",
  "version": "1.0",
  
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],      
      "js": ["popup.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",    
	"http://spokensanskrit.de/",
	"https://spokensanskrit.de/"
  ]
}